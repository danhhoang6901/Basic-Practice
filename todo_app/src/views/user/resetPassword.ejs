<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login User</title>
    <link href="/bootstrap-5.0.2-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <nav class="navbar nav-tabs navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="/todo/list">Todo</a>
                                </li>
                            </ul>
                            <a href="/user/login" class="btn btn-primary">Login</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Reset password</h1>
            </div>
            <div class="col-4"></div>
            <div class="col-4 border rounded-3 bg-light mt-3">
                <form class="row g-3 p-3" action="/user/reset-password" method="post">
                    <input type="hidden" class="form-control" name="email" value="<%=email%>">
                    <div class="col-12">
                        <label for="newPassword">New password</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                            value="<%=newPassword || ''%>" />
                        <% if(errors && errors.newPassword) { %>
                            <span class="text-danger">
                                <%= errors.newPassword.msg %>
                            </span>
                            <% } %>
                    </div>
                    <div class="col-12">
                        <label for="confirmNewPassword">Confirm new password</label>
                        <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword"
                            value="<%=confirmNewPassword || ''%>" />
                        <% if(errors && errors.confirmNewPassword) { %>
                            <span class="text-danger">
                                <%= errors.confirmNewPassword.msg %>
                            </span>
                            <% } %>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Reset pasword</button>
                    </div>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
</body>
<script src="/bootstrap-5.0.2-dist/js/bootstrap.bundle.min.js"></script>

</html>