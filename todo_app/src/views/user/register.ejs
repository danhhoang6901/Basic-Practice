                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="/todo/list">Todo</a>
                                </li>
                            </ul>
                            <a href="/user/login" class="btn btn-primary">Login</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Register User</h1>
            </div>
            <div class="col-4"></div>
            <div class="col-4 border rounded-3 bg-light mt-3">
                <form class="row g-3 p-3" action="/user/register-submit" method="post">
                    <div class="col-12">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="abc123@gmail.com"
                            value="<%=user.email || ''%>">
                        <% if(errors && errors.email) { %>
                            <span class="text-danger">
                                <%= errors.email.msg %>
                            </span>
                            <% } %>
                    </div>
                    <div class="col-12">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%=user.name || ''%>">
                        <% if(errors && errors.name) { %>
                            <span class="text-danger">
                                <%= errors.name.msg %>
                            </span>
                            <% } %>
                    </div>
                    <div class="col-12">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            value="<%=user.password || ''%>">
                        <% if(errors && errors.password) { %>
                            <span class="text-danger">
                                <%= errors.password.msg %>
                            </span>
                            <% } %>
                    </div>
                    <div class="col">
                        <label for="confirmPassword" class="form-label">Confirm password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                            value="<%=user.confirmPassword || ''%>">
                        <% if(errors && errors.confirmPassword) { %>
                            <span class="text-danger">
                                <%= errors.confirmPassword.msg %>
                            </span>
                            <% } %>
                    </div>
